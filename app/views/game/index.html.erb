<h2 class = "title is-2">Games#index</h2>
<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release Year</th>
      <th>Price</th>
      <th>Genre</th>
      <th>Publisher</th>
      <th>Platform</th>
    </tr>
  </thead>

  <tbody>
  <% @games.each do |game| %>
    <tr>
      <td><%= link_to game.game_name, game %></td>
      <td><%= game.release_year %></td>
      <td><%= game.price %></td>
      <td><%= link_to game.genre.genre_name, game.genre %></td>
      <td><%= link_to game.publisher.publisher_name, game.publisher %></td>
      <td><%= link_to game.platform.platform_name, game.platform %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @games %>

