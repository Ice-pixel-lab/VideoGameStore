<div class="container">
  <div class="row">
    <div class = "col d-flex justify-content-center">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= @game.game_name %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong> Platform: </strong> <%= link_to @game.platform.platform_name, @game.platform %></li>
          <li class="list-group-item"><strong> Genre: </strong> <%= link_to @game.genre.genre_name, @game.genre %></li>
          <li class="list-group-item"><strong> Release Year: </strong> <%= @game.release_year %></li>
          <li class="list-group-item"><strong> Price: </strong> <%= @game.price%>$CAD</li>
          <li class="list-group-item"><strong> Publisher: </strong> <%= link_to @game.publisher.publisher_name, @game.publisher %></li>
        </ul>
        <div class="card-body">
          <button type="button" class="btn btn-secondary">Purchase</button>
        </div>
      </div>
    </div>
  </div>
</div>


